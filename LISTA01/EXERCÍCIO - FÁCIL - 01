/*
Crie uma função que receba uma string como parâmetro e retorne o número de caracteres que ela contém, sem usar a função strlen() da biblioteca <string.h>.
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int contador(char palavra[50]){
    int aux = 0;
    
    for(int i = 0; i < 50; i++){
        if(palavra[i] != '\0') aux++;
        else break;
    }
    
    return aux;
}


int main(){
    char nome[50];
    
    printf("Digite um nome: ");
    fgets(nome, 50, stdin);
    nome[strcspn(nome, "\n")] = '\0';
    
    printf("\nO nome contém %d caracteres", contador(nome));
    
    return 0;
    
}
