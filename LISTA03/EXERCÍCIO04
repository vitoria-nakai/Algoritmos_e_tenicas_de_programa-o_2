/*
 Crie um programa que copie o conteúdo de um arquivo para outro. O 
usuário deve fornecer os nomes dos arquivos de origem e destino.
*/

#include<stdio.h>
#include<stdlib.h>

int main(){
    FILE * file_origem;
    FILE * file_destino;
    char origem[50];
    char destino[50];
    
    printf("Qual arquivo será a origem?\n");
    scanf("%s", origem);
    printf("Qual arquivo será o destino?\n");
    scanf("%s", destino);
    
    file_origem = fopen(origem, "r");
    file_destino = fopen(destino, "w");
    
    fputs((fgets(origem, sizeof(origem), file_origem)), file_destino);
    
    getchar();
    return 0;
}
