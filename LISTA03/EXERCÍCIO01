/*
Crie um programa que solicite ao usu√°rio para inserir 5 nomes 
e os salve em um arquivo de texto chamado "nomes.txt", um nome por linha.
*/

#include<stdio.h>
#include<stdlib.h>

int main(){
    FILE *file;
    char nomes[50];
    
    file = fopen("nomes.txt", "w");

    for(int i = 0; i < 5; i++){
        printf("Digite o nome numero %d: \n", (i + 1));
        scanf("%s", nomes);
        fputs(nomes, file);
        fputs("\n", file);
    }
    fclose(file);
    
    getchar();
    return 0;
}
