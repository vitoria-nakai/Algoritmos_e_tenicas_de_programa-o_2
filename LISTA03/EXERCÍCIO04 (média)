/*
 Crie um programa que copie o conteúdo de um arquivo para outro. O 
usuário deve fornecer os nomes dos arquivos de origem e destino.
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
    
    char arquivo_origem[100];
    char arquivo_destino[100];
    
    printf("Qual o nome do arquivo de origem? ");
    fgets(arquivo_origem, sizeof(arquivo_origem), stdin);
    arquivo_origem[strcspn(arquivo_origem, "\n")] = '\0';
    
    printf("Qual o nome do arquivo de destino? ");
    fgets(arquivo_destino, sizeof(arquivo_destino), stdin);
    arquivo_destino[strcspn(arquivo_destino, "\n")] = '\0';
    
    
    FILE * origem = fopen(arquivo_origem, "r");
    if(arquivo_origem == NULL){
        printf("Erro ao abrir o arquivo de origem.");
        return 1;
    }
    FILE * destino = fopen(arquivo_destino, "w");
    if(arquivo_destino == NULL){
        printf("Erro ao abrir o arquivo de destino.");
        return 1;
    }
    
    char str[100];
    
    while(fgets(str, sizeof(str), origem) != NULL) fputs(str, destino);
    
    fclose(origem);
    fclose(destino);
    
    return 0;
}
