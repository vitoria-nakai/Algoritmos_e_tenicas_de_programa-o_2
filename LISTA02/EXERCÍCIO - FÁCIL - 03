/*
Crie uma função que verifique se uma string é um palíndromo,
ignorando espaços e diferenciação entre maiúsculas e minúsculas. 
A função deve retornar 1 se for palíndromo e 0, caso contrário.
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int eh_palindromo(char * palavra){
    int j = strlen(palavra);
    
    for(int i = 0; i < j; i++){
        if(palavra[i] != palavra[j - 1]) return 0;
        j--;
    }
    return 1;
}


int main(){
    char palavra[50];
    
    printf("Digite uma palavra: ");
    fgets(palavra, 50, stdin);
    palavra[strcspn(palavra, "\n")] = '\0';
    
    if( eh_palindromo(palavra) == 1) printf("É palíndromo!");
    else printf("Não é palíndromo");
    
    return 0;
}
