/*
Escreva uma função que conte o número de vogais em uma string.
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int qtd_vogais(char *str){
    int qtd = 0;
    for(int i = 0; i < strlen(str); i++)
        if(str[i] == 'a' || str[i] == 'A' || str[i] == 'e' || str[i] == 'E'
         || str[i] == 'i' ||str[i] == 'I' || str[i] == 'o' || str[i] == 'O'
         || str[i] == 'u' || str[i] == 'U') qtd++;
    return qtd;
}

int main(){
    char str[50];
    printf("Digite sua string: ");
    gets(str);
    printf("\nA quantidade de vogais na sua string eh de %d.", qtd_vogais(str));
    getchar();
    return 0;
    
}
