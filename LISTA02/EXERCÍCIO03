/*
Escreva uma função que conte o número de vogais em uma string.
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int contarVogais(char str[]){
    int qtd = strlen(str);
    int contador = 0;
    
    for(int i = 0; i < qtd; i++)
        if(str[i] == 'A' || str[i] == 'a' || str[i] == 'E' || str[i] == 'e' || str[i] == 'I' || str[i] == 'i' ||
        str[i] == 'O' || str[i] == 'o' || str[i] == 'U' || str[i] == 'u') 
            contador++;
    
    return contador;
}

int main(){
    char string[50];
    int qtdVogais;
    
    printf("Digite uma string: ");
    fgets(string, sizeof(string), stdin);
    
    qtdVogais = contarVogais(string);
    
    printf("A quantidade de vogais é de %d", qtdVogais);
    
    return 0;
}
