/*
Crie um programa que leia uma string e a imprima de tr√°s para frente.
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

void imprimirInvertido(char str[50]){
    int aux = strlen(str);
    
    printf("A string invertida fica ");
    
    for(int i = aux - 1; i > -1; i--){
        printf("%c", str[i]);
        if(i > 0){
            printf(" -> ");
        }
    }
}

int main(){
    char string[50];
    
    printf("Digite uma string: ");
    
    fgets(string, sizeof(string), stdin);
    string[strcspn(string, "\n")] = '\0';
    
    imprimirInvertido(string);
    
    return 0;
    
}
