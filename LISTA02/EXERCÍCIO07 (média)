/*
Implemente uma função que converta uma string para maiúsculas sem usar
a função toupper().
*/

#include<stdio.h>
#include<stdlib.h>
#include<string.h>

void shift(char * str){

    int tamanho = strlen(str);

    for(int i = 0; i < tamanho; i++){
        if(str[i] >= 'a' && str[i] <= 'z'){
            str[i] = str[i] - 32;
        } 
    }    
}


int main(){
    
    char string[100];
    
    printf("Digite uma string: ");
    fgets(string, sizeof(string), stdin);
    string[strcspn(string, "\n")] = '\0';
    
    shift(string);
    
    printf("A string em maiúsculas fica: %s", string);
    
    return 0;
}
